---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { createT } from "../../i18n/translations";

const lang = "el";
const t = createT(lang);
---

<Layout lang={lang} title="Σχετικά | Portfolio" description="Σελίδα σχετικά">
  <Header t={t} lang={lang} />

  <!-- About section (animated) -->
  <section
    data-reveal
    style="--reveal-delay: 100ms"
    class="mx-auto max-w-5xl px-4 py-16"
  >
    <h1 class="text-3xl font-bold">Σχετικά</h1>

    <p class="mt-4 opacity-80 max-w-2xl">
      Placeholder σελίδα (απαίτηση εργασίας).
    </p>
  </section>

  <Footer t={t} />
</Layout>
